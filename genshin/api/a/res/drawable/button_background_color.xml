<?xml version="1.0" encoding="utf-8"?>
<selector
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#ffbcb4b4" />
            <stroke android:width="2.0px" android:color="#ffcfcfd2" />
            <corners android:topLeftRadius="20.0px" android:topRightRadius="20.0px" android:bottomLeftRadius="20.0px" android:bottomRightRadius="20.0px" />
            <padding android:top="2.0px" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#ffcababa" />
            <stroke android:width="2.0px" android:color="#ffcfcfd2" />
            <corners android:topLeftRadius="20.0px" android:topRightRadius="20.0px" android:bottomLeftRadius="20.0px" android:bottomRightRadius="20.0px" />
            <padding android:top="2.0px" />
        </shape>
    </item>
</selector>